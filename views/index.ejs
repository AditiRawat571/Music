<html>
    <head>
        <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<link rel="stylesheet" href="index.css">
    </head>
    <body>
        
     <div class="row">
        <div class="col" id="nav">
                <nav class="navbar">
                    <div class="container-fluid">                    
                      <ul class="row nav navbar-nav" >
                        <li class="col-lg-12"><a href="#">Home</a></li>
                        <li class="col-lg-12"><a href="#">Search</a></li>
                        <form class="navbar-form navbar-left" action="/index" method="post">
                          <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="search">
                            <div class="input-group-btn">
                              <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                              </button>
                            </div>
                          </div>
                        </form>
                        <li class="col-lg-12"><a href="#">Favourites</a></li>
                        <li class="col-lg-12"><a href="#">Playlist</a></li>
                      </ul>                      
                    </div>
                  </nav>
            
            
        </div>

        <div class="col" id="main">
          <div class="row">

            <div class="col-lg-12 img-div bg-primary"></div>

            <div class="col-lg-12" id="search"  style="padding-left: 5%;">   
              <h1 class="text-muted" style="font-size: 25px; padding-top: 2%;">Your Searches </h1>
              <div class="table-responsive-lg" style="overflow-x: auto;">                
                <table class="table table-hover row" >
                  <tr class="row">                    
                    <%obj.forEach((details,index)=>{ %>
                      <td class="col"  style="padding-top: 2%;">
                          <div class="card" style="width:250px">                        
                              <img class="card-img-top" src= "<%= details.track.share.image %>" alt="Card image">
                               <div class="card-body">                                  
                                    <a href="<%= details.track.url %>">
                                      <h4 class="card-title"><%= details.track.title %></h4>
                                    </a>                                                              
                                    <button onclick="func(this)" class="button"></button>                                                                                           
                               </div>
                          </div>
                      </td>
                    <% }) %>
                  </tr>
                </table>
              </div>
            </div>

            <div class="col-lg-12" style="padding-left: 5%;">
              <h1 class="text-muted" style="font-size: 25px; padding-top: 2%;">Top Releases</h1>
              <div class="table-responsive-lg" style="overflow-x: auto;">
                <table class="table table-hover row" >
                  <tr class="row">
                    <%releases.forEach((details)=>{ %>
                        <td class="col" style="padding-top: 0.5%;"><div class="card" style="width:250px"><a href="<%= details.url %>">
                          <img class="card-img-top" src= "<%= details.share.image %>" alt="Card image">
                          <div class="card-body">
                            <h4 class="card-title"><%= details.title %></h4>
                          </a>
                          </div></td>                    
                        <% }) %>
                  </tr>
                </table>
              </div>
            </div>


            </div>
          </div>
        </div>
      
